{% extends 'base.html.twig' %}

{% block body %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 style="margin: 5px 0px;">
            Commodities in {{ station.name }} ({{ station.system.name }} system)
            <div class="pull-right" style="margin-top: -5px; margin-right: -5px;">
                <a href="{{ path('station-edit', {'id': station.id}) }}" class="btn btn-default btn-sm">Edit station</a>
                <a href="{{ path('posting-new', {'station_id': station.id}) }}" class="btn btn-primary btn-sm">Add commodity posting</a>
            </div>
        </h4>
    </div>
    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <th>Sell (to market)</th>
            <th>Buy (from market)</th>
            <th>Demand</th>
            <th>Supply</th>
        </tr>
        {% for posting in station.postings %}
        <tr id="{{ posting.id }}">
            <td><a href="{{ path('commodity-show', { 'id': posting.commodity.id }) }}">{{ posting.commodity.name }}</a></td>
            <td class="sell"  >{{ posting.sell|number_format }}</td>
            <td class="buy"   >{{ posting.buy|number_format }}</td>
            <td class="demand">{{ posting.demand|number_format }}</td>
            <td class="supply">{{ posting.supply|number_format }}</td>
        </tr>
        {% endfor %}
    </table>
</div>
<div class="text-center">
    <a href="{{ path('station-trade', {'id': station.id}) }}" class="btn btn-default">Show trade opportunities</a>
</div>

<script type="text/javascript">
</script>
{% endblock %}