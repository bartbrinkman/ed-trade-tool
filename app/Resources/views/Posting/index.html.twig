{% extends '::base.html.twig' %}

{% block body %}
<div class="panel panel-default">
	<div class="panel-heading">
		<h3 style="margin: 5px 0px;">
			Systems
			<a href="{{ path('system-new') }}" class="btn btn-primary btn-sm pull-right" style="margin-top: -2px; margin-right: -2px;">Add new system</a>
		</h3>
	</div>
	<table class="table table-bordered">
		<tr>
			<th>Name</th>
		</tr>
		{% for system in systems %}
		<tr>
			<td><a href="{{ path('system-show', { 'id': system.id }) }}">{{ system.name }}</a><span class="badge pull-right">{{ system.stations|length }}</span></td>
		</tr>
		{% endfor %}
	</table>
</div>
{% endblock %}
